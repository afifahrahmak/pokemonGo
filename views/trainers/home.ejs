<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link
    href="https://fonts.googleapis.com/css?family=Codystar|Covered+By+Your+Grace|Dawning+of+a+New+Day|Montserrat|Playfair+Display|Prata|Roboto&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="css/style.css">
  <title>PokemonGo</title>
</head>

<body>
  <nav style="display: flex; justify-content: space-around; width: 300px;">
    <a href="/" class='link'>home</a>
    <a href="/pokemons" class='link'>pokemon</a>
    <a href="/trainers" class='link'>trainer</a>
  </nav>
  <br>
  <h1>Elixir-Fox Trainer List</h1>
  <br />
  <%- include('../partials/error.ejs') %>
  <table>
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Age</th>
        <th>Points</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%  trainers.forEach(trainer=>{  %>
      <tr>
        <td><%= trainer.fullName   %></td>
        <td><%= trainer.age    %></td>
        <td><%= trainer.points    %></td>
        <td>
          <a href="/trainer/edit/<%=trainer.id%>" class="action"><button>edit</button></a>
          <a href="/trainer/delete/<%=trainer.id%>" class="action"
            onclick="return confirm('delete this trainer?');"><button>delete</button></a>
        </td>
      </tr>
      <%  })  %>
    </tbody>
  </table>
  <br>
  <br>
  <a href="/trainers/add" class='add'><button>register</button></a>

  <%- include('../partials/footer') %>
</body>

</html>