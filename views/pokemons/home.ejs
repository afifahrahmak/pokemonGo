<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="css/style.css">
  <title>PokemonGo</title>
</head>

<body>
  <nav style="display: flex; justify-content: space-around; width: 300px;">
    <a href="/" class='link'>home</a>
    <a href="/pokemons" class='link'>pokemon</a>
    <a href="/trainers" class='link'>trainer</a>
  </nav>
  <br>
  <h1>Elixir-Fox Pokemon List</h1>
  <br />
  <%- include('../partials/error.ejs') %>
  <table>
    <thead>
      <tr>
        <th> Name</th>
        <th> Type</th>
        <th> Action</th>
      </tr>
    </thead>
    <tbody>
      <% if (pokemons) { %>
      <% pokemons.forEach( pokemon => { %>
      <tr>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.type %></td>
        <td>
          <a href="/pokemons/edit/<%=pokemon.id%>" class="action"><button>edit</button></a>
          <a href="/pokemons/delete/<%=pokemon.id%>" class="action"
            onclick="return confirm('delete this pokemon?');"><button>delete</button></a>
        </td>
      </tr>
      <%  })  %>
      <% } %>
    </tbody>
  </table>
  <br>
  <br>

  <a href="/pokemons/add" class='add'><button>add more pokemon</button></a>
  <%- include('../partials/footer') %>
</body>

</html>